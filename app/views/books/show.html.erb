<div class="container px-5 px-sm-0">
  <dic class="row">
    <div class="col-md-3">
      <%= render 'users/user_info',user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <th>
            <% if @book.user.profile_image.attached? %>
            <%= image_tag @book.user.profile_image, size: "80x80" %>
            <% else %>
            <%= image_tag "no_image", size: "80x80" %>
            <% end %>
            <br>
            <%= link_to @book.user.name ,user_path%>
          </th>
          <th>
            <%= link_to @book.title, book_path(@book.user.id) %>
          </th>
          <th>
            <%= @book.body %>
          </th>
          <th>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.user.id), class: "btn btn-success" %>
            <% end %>
          </th>
          <th>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book.user.id), method: :delete , class: "btn btn-danger"%>
            <% end %>
          </th>
        </thead>
      </table>
    </div>
  </div>
</div>

