<%= render 'users/user_info',user: current_user %>

<h2>Books</h2>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <% if book.user.profile_image.attached? %>
          <%= image_tag book.user.profile_image, size: "80x80" %>
          <% else %>
          <%= image_tag "no_image", size: "80x80" %>
          <% end %>
        </td>
        <td>
          <%= link_to book.title, book_path(book.user.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
