<div>
   <%= flash[:notice]%>
</div>

<div class="container px-5 px-sm-0">
  <dic class="row">
    <div class="col-md-3">
      <%= render 'users/user_info',user: User.find(params[:id]) %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <% if book.user.profile_image.attached? %>
                  <%= image_tag book.user.profile_image, size: "80x80" %>
                  <% else %>
                  <%= image_tag "no_image", size: "80x80" %>
                  <% end %>
                <% end %>
              </td>
              <td>
                <%=link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>