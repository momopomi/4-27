 <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
      <h4>Name</h4>
      <%= f.text_field :name %>
      <h4>Image</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <h4>Introduction</h4>
      <%= f.text_area :Introduction %>
      <%= f.submit 'Update User' %>
      <% end %>
      </div>
    </div>
  </div>